<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_field_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Shelapur"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_loc"
        app:layout_constraintStart_toEndOf="@+id/img_loc"
        app:layout_constraintTop_toTopOf="@+id/img_loc" />

    <TextView
        android:id="@+id/text_field_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="2000"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/text_field_rent_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_field_rent_type" />

    <TextView
        android:id="@+id/text_field_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="20 Acre"
        android:textColor="@color/Brown"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_area"
        app:layout_constraintStart_toEndOf="@+id/img_area"
        app:layout_constraintTop_toTopOf="@+id/img_area" />

    <TextView
        android:id="@+id/text_agri_land_type_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Crop Land"
        android:textColor="@color/NdarkGreen"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/text_field_area"
        app:layout_constraintTop_toBottomOf="@+id/text_field_area" />

    <TextView
        android:id="@+id/text_field_rent_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Rent"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/text_field_rent"
        app:layout_constraintTop_toTopOf="@+id/text_agri_land_type_row" />

    <ImageView
        android:id="@+id/img_loc"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
       android:layout_margin="10dp"
        android:background="@color/Brown"
        app:layout_constraintEnd_toStartOf="@+id/text_field_location"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_agri_land_type_row" />

    <ImageView
        android:id="@+id/img_area"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_field_location" />
</androidx.constraintlayout.widget.ConstraintLayout>
