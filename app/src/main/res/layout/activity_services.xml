<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ServicesActivity">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/white"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/menu_navigation" />


        <ImageView
            android:id="@+id/img_view_profile_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/warning"
            app:layout_constraintBottom_toBottomOf="@+id/text_profile_detail"
            app:layout_constraintEnd_toStartOf="@+id/text_profile_detail"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_profile_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:text="Verify Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:text="Agricultural Services "
            android:textColor="@color/NdarkGreen"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_profile_detail" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_transport_service"
                            android:layout_width="wrap_content"
                            android:layout_height="170dp"
                            android:layout_marginTop="8dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/transportation" />

                        <ImageView
                            android:id="@+id/img_agri_equip_service"
                            android:layout_width="wrap_content"
                            android:layout_height="170dp"
                            android:layout_marginTop="8dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/agri_equipment" />

                        <ImageView
                            android:id="@+id/img_land_service"
                            android:layout_width="wrap_content"
                            android:layout_height="170dp"
                            android:layout_marginTop="8dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/land" />

                        <ImageView
                            android:id="@+id/img_warehouse_service"
                            android:layout_width="wrap_content"
                            android:layout_height="170dp"
                            android:layout_marginTop="8dp"

                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/img_ware_house" />

                </LinearLayout>
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
